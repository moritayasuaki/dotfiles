[core]
    excludesfile = $HOME/.gitignore
[color]
    ui = auto
[push]
    default = simple
[branch]
    autosetuprebase = always
[merge]
    ff = false
[pull]
    rebase = true
[user]
    name = Yasuaki MORITA
    email = zousandazou@gmail.com
[url "git@github.com:"]
    pushinsteadof = https://github.com/
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[include]
    path = ~/.gitconfig.local
